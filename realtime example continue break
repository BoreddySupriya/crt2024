#include <stdio.h>

int main() {
    // Write C code here
    while(1)
    {
    printf("enter name");
    char name[20];
    scanf("%s",name);
    printf("Enter father name");
    char fname[20];
    scanf("%s",fname);
    printf("Enter branch");
    char branch[10];
    scanf("%s",branch);
    printf("enter marital status 1 for single and 2 for married ");
    int a;
    scanf("%d",&a);
    if(a==1)
    continue;
    printf("enter spouse name");
    char sname[20];
    scanf("%s",sname);
    printf("Enter no of children");
    int b;
    scanf("%d",&b);
    printf("Enter another record (y/n)");
    char ch;
    fflush(stdin);
    scanf("%c",&ch);
    if(ch=='n' || ch=='N')
    break;
    }


    return 0;
}
